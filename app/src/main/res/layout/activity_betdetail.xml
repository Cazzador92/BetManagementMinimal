<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.rocks.jsdevelopment.betmanagement.BetDetailActivity">

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Titel"
                android:id="@+id/txtTitle"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Start"
                android:id="@+id/txtStartDate"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ende"
                android:id="@+id/txtEndDate"/>
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

        <com.wrapp.floatlabelededittext.FloatLabeledEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            float:fletTextAppearance="@style/floatlabelededittext">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Beschreibung"
                android:id="@+id/txtDescription"/>
<!--
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DafÃ¼r"
                android:id="@+id/lvForBet"/>


            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dagegen"
                android:id="@+id/lvAgainstBet"/>
-->
        </com.wrapp.floatlabelededittext.FloatLabeledEditText>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Speichern"
        android:id="@+id/txtSave" />

</LinearLayout>